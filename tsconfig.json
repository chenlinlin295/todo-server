{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "outDir": "./dist",
        "removeComments": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src",
        "@types"
    ],
    "exclude": [
        "node_modules"
    ]
}